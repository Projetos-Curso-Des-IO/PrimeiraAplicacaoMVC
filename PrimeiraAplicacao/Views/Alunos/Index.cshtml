@model IEnumerable<Aluno>

<h2>Lista de Alunos</h2>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.DataNascimento)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Avaliacao)</th>
            <th>@Html.DisplayNameFor(model => model.Ativo)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var aluno in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => aluno.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => aluno.DataNascimento)</td>
                    <td>@Html.DisplayFor(modelItem => aluno.Email)</td>
                    <td>@Html.DisplayFor(modelItem => aluno.Avaliacao)</td>
                    <td>@Html.DisplayFor(modelItem => aluno.Ativo)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@aluno.Id" class="btn btn-info">Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@aluno.Id" class="btn btn-warning">Editar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Cadastrar Novo Aluno</a>