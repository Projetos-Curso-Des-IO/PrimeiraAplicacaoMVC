<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Titanium</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PrimeiraAplicacao.styles.css" asp-append-version="true" />
</head>
<body>    
    <partial name="_MenuLayout" />

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white py-4" style="background: rgba(0, 0, 0, 0.2);">
        <div class="container text-center">
            <div class="row">
                <div class="col-md-6">
                    &copy; 2025 - Titanium Software
                </div>
                @* <div class="col-md-6"> *@
                @*     <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white text-decoration-none"> *@
                @*         Política de Privacidade *@
                @*     </a> *@
                @* </div> *@
            </div>
            <div class="mt-3">
                <!-- Componente de Saudação -->
                <vc:saudacao-aluno />
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
